<header class="header">
    <div class="logo"><li><%= link_to "Tooly Tooly Rental", root_path %></li></div>
    <ul class="nav">
        <li><%= link_to "Tools", categories_path  %></li>
        <li><%= link_to "About_Us", about_us_path%></li>
    </ul>
    <div>
    <div class="dropdown">
        <button class="btn btn-secondary " type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fa-solid fa-user"></i>
        </button>
        <ul class="dropdown-menu">
            <% if user_signed_in? %>
            <li>
                <%= cl_image_tag current_user.photo.key, height: 50, width: 50, crop: :fill%>
                <%= link_to "Profile", profile_path(current_user), class: "text-center" %>
            </li>
            <hr class="dropdown-divider">
                <li><%= link_to "Log Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-center"  %></li>
            <% else %>
               <li><%= link_to "Log In", new_user_session_path %></li>
            <% end %>
        </ul>
    </div>
    </div>
</header>

